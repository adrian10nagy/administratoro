@model IEnumerable<Administratoro.BL.Models.YearMonth>

@{
    ViewBag.Title = "Index";    
}

@using  System.Globalization;

<h2>Cheltuielile </h2>

<table class="table">
    <tr>
        <th>
            Anul
        </th>
        <th>
            Luna
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(@item.Month)
            </td>
            <td>

                @Html.ActionLink("Detalii", "Detalii", "Cheltuieli", new { year = item.Year, month = item.Month}, null)


            </td>
        </tr>
    }

</table>
